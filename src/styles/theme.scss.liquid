/*================ Fonts ================*/

@font-face {
	font-family: 'DINPro Regular';
	font-style: normal;
	font-weight: normal;
	src: url("{{ 'DINPro-Regular.woff' | asset_url }}") format('woff');
}


@font-face {
	font-family: 'DINPro Medium';
	font-style: normal;
	font-weight: normal;
	src: url("{{ 'DINPro-Medium.woff' | asset_url }}") format('woff');
}


@font-face {
	font-family: 'DINPro Bold';
	font-style: normal;
	font-weight: normal;
	src: url("{{ 'DINPro-Bold.woff' | asset_url }}") format('woff');
}

/*============================================================================
	#Sass Mixins & Helpers
==============================================================================*/

@mixin background-cover {
	background-size: cover;
	background-repeat: no-repeat;
	background-position: 0 0;
}


/*================ Colors ================*/

$orange: #ff5e48;
$black: #231f20;

/*================ General Variables ================*/

$headerFontStack: 'DINPro Medium', sans-serif;
$headerFontWeight: normal;

$bodyFontStack: 'DINPro Regular', sans-serif;

$buttonFontStack: 'DINPro Bold', sans-serif;

$content-spacing: 50px;

/*================ Helpers ================*/

.title-overlay {
	background-color: rgba(255,255,255,0.8);
	border: 1px solid $orange;
	text-transform: uppercase;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	display: none;

	> div {
		height: 100%;
	}

	a {
		display: block;
	}
}

.hover-reveal {
	position: relative;

	&:hover {
		.title-overlay {
			display: block;
		}
	}	
}

/*============================================================================
	#Typography
==============================================================================*/

body {
	font-family: $bodyFontStack;
	font-size: 15px;
	letter-spacing: 0.02em;
}

p {
	font-size: 15px;
	line-height: (25/15);
	margin: 0 0 35px 0;
}

h1 {
	font-size: $content-spacing;
	line-height: (46/50);
	font-weight: $headerFontWeight;
	font-family: $headerFontStack;
	margin: 0 0 $content-spacing 0;
	text-transform: uppercase;
}

h2 {
	font-size: 30px;
	font-weight: $headerFontWeight;
	font-family: $headerFontStack;
	line-height: (30/30);
	margin: 0 0 $content-spacing 0;
	text-transform: uppercase;
}

h4 {
	font-size: 18px;
	font-weight: $headerFontWeight;
	font-family: $headerFontStack;
	line-height: (25/18);
	margin: 0 0 10px 0;
	text-transform: uppercase;
	color: $orange;
}

.h1 { @extend h1; }
.h2 { @extend h2; }
.h3 { @extend h3; }
.h4 { @extend h4; }
.h5 { @extend h5; }
.h6 { @extend h6; }

.dash {
	width: 30px;
	height: 1px;
	background-color: $orange;
	margin: 37px auto 30px;
}

/*============================================================================
	#Links and Buttons
==============================================================================*/

a,
.text-link {
	color: $orange;
	text-decoration: none;
	background: transparent;
}

a:hover,
a:focus {
	color: $orange;
}

.button, button {
	font-family: $buttonFontStack;
	display: inline-block;
	padding: 10px 44px;
	width: auto;
	margin: 0;
	line-height: (30/15);
	font-weight: normal;
	text-decoration: none;
	text-align: center;
	vertical-align: middle;
	white-space: nowrap;
	cursor: pointer;
	-webkit-appearance: none;
	-moz-appearance: none;
	border-radius: 0;
	border: 1px solid transparent;
	background-color: $orange;
	color: white;
	text-transform: uppercase;
	&:hover {
		background-color: white;
		border: 1px solid $orange;
		color: $orange;		
	}
}

.button-alt {
	@extend .button;
	background-color: transparent;
	border: 1px solid $orange;
	color: $orange;
	&:hover {
		background-color: $orange;
		color: white;
	}
}

/*============================================================================
	#Header
==============================================================================*/

.header {
	padding: 20px 0;
	position: relative;
}

.header__cart-link {
	font-size: 13px;
	font-weight: $headerFontWeight;
	font-family: $headerFontStack;	

	img {
		margin-right: 5px;
	}
}

#customer_login_link {
	color: $black;
}

.navigation-menu {
	padding: 0;
	margin: 0;

	> li {
		list-style: none;
		display: inline-block;


		> a {
			color: $black;
			text-transform: uppercase;
			font-size: 13px;
			line-height: (36/13);
			letter-spacing: 0.05em;

			&:hover {
				color: $orange;
			}

		}
	}

	&.left-menu {
		> li {
			margin-left: 20px;
		}
	}

	&.right-menu {
		> li {
			margin-right: 20px;
			&:last-child {
				margin: 0;
			}
		}
	}
}

.promo-bar {
	background-color: $black;
	color: white;
	text-align: center;
	padding: 7px 0;

	a {
		text-transform: uppercase;
		font-weight: $headerFontWeight;
		font-family: $headerFontStack;
		text-decoration: underline;
		color: white;	
	}
}

.has-mega-menu {
	&:hover {
		.mega-menu {
			display: block;
		}
	}
}

.mega-menu {
	display: none;
	position: absolute;
	width: 100%;
	left: 0;
	top: 100%;
	margin-top: -20px;
	background-color: white;
	text-align: left;
	padding: 40px 0 20px;
	overflow: hidden;

	span {
		text-transform: uppercase;
		font-size: 13px;
		line-height: (36/13);
		display: block;
	}

	ul {
		margin: 0
	}

	li {
		display: block;
	}

	a {
		font-size: 13px;
		line-height: (36/13);
		text-transform: none;
		color: $black;

		&:hover {
			color: $orange;
		}
	}
}

.mega-menu__image {
	position: absolute;
	right: 0;
	top: 20px;
	width: 33%;
	height: 100%;
	background-color: #fbfbfb;
	img {
		height: 100%;
	}
}

/*============================================================================
	#Footer
==============================================================================*/

.footer {
	border-top: 1px solid #e1e1e1;
	padding: $content-spacing 0 0 0;

	.input-group {
		max-width: 400px;
	}

	.input-group-button {
		margin-left: 15px;
	}

	strong {
		text-transform: uppercase;
		display: block;
		margin-bottom: 30px;
	}

	ul {
		margin: 0 0 $content-spacing 0;
		padding: 0;

		li {
			list-style: none;
		}

		a {
			color: $black;

			&:hover {
				color: $orange;
			}
		}
	}
}

.footer__bottom {
	background-color: #f9f9f9;
	border-top: 1px solid #e1e1e1;
	padding: 20px 0;
	color: #999596;

	a {
		font-size: 13px;
		margin-left: 30px;
		color: #999596;
	}
}

/*============================================================================
	#Banner
==============================================================================*/

.hero-banner {
	@include background-cover;
	height: 540px;

	.h1 {
		margin-top: 115px;
		font-size: 48px;
		line-height: (55/50);
	}

	p {
		font-size: 18px;
		line-height: (25/18);
	}
}

/*============================================================================
	#Subscribe section
==============================================================================*/

.subscribe-section {
	padding: $content-spacing 0;
}

.subscribe-section__step {
	position: relative;
	margin-top: 30px;
	margin-bottom: $content-spacing;

	.step-index {
		font-family: $buttonFontStack;
		font-size: 150px;
		line-height: (120/150);
		color: $orange;
		letter-spacing: 0;
		text-align: right;
		display: block;
	}

	.step-label {
		position: absolute;
		left: 0;
		top: 35px;
		text-align: left;
		width: 80%;
		text-indent: 2px;

		strong {
			border-bottom: 1px solid $black;
			
			display: block;
		}	
	}
}

/*============================================================================
	#Drinks slideshow section
==============================================================================*/

.slideshow__slide {
	@include background-cover;

	> div {
		height: 520px;
	}

	.h1 {
		margin-top: 80px;
	}

	h2 {
		margin-bottom: 30px;
	}
}

/* Slider */

.slick-slider {
	position: relative;
	display: block;
	box-sizing: border-box;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	-ms-touch-action: pan-y;
	touch-action: pan-y;
	-webkit-tap-highlight-color: transparent;
}
.slick-list {
	position: relative;
	overflow: hidden;
	display: block;
	margin: 0;
	padding: 0;

	&:focus {
		outline: none;
	}

	&.dragging {
		cursor: pointer;
		cursor: hand;
	}
}
.slick-slider .slick-track,
.slick-slider .slick-list {
	-webkit-transform: translate3d(0, 0, 0);
	-moz-transform: translate3d(0, 0, 0);
	-ms-transform: translate3d(0, 0, 0);
	-o-transform: translate3d(0, 0, 0);
	transform: translate3d(0, 0, 0);
}

.slick-track {
	position: relative;
	left: 0;
	top: 0;
	display: block;
	margin-left: auto;
	margin-right: auto;

	&:before,
	&:after {
		content: "";
		display: table;
	}

	&:after {
		clear: both;
	}

	.slick-loading & {
		visibility: hidden;
	}
}
.slick-slide {
	float: left;
	height: 100%;
	min-height: 1px;
	[dir="rtl"] & {
		float: right;
	}
	img {
		display: block;
	}
	&.slick-loading img {
		display: none;
	}

	display: none;

	&.dragging img {
		pointer-events: none;
	}

	.slick-initialized & {
		display: block;
	}

	.slick-loading & {
		visibility: hidden;
	}

	.slick-vertical & {
		display: block;
		height: auto;
		border: 1px solid transparent;
	}
}
.slick-arrow.slick-hidden {
	display: none;
}

.slick-dots {
	position: absolute;
	bottom: 30px;
	list-style: none;
	display: block;
	text-align: center;
	padding: 0;
	margin: 0;
	width: 100%;
	li {
		position: relative;
		display: inline-block;
		height: 15px;
		width: 15px;
		margin: 0 5px;
		padding: 0;
		cursor: pointer;
		button {
			border: 1px solid #eeeeee;
			background: white;
			display: block;
			height: 15px;
			width: 15px;
			outline: none;
			line-height: 0px;
			font-size: 0px;
			color: transparent;
			padding: 5px;
			cursor: pointer;
			border-radius: 100%;
			&:hover, &:focus {
				outline: none;
				&:before {
					background: orange;
				}
			}
		}
		&.slick-active button {
			background: $orange;
			border: 1px solid $orange;
		}
	}
}

/*============================================================================
	#Product grid
==============================================================================*/

.product-grid {
	padding: 20px 0 80px;

	h2 {
		margin-bottom: 30px;
	}
}

.product-grid__product {
	margin: 0 0 50px 0;
}

/*============================================================================
	#Featured collection
==============================================================================*/

.banner {
	height: 610px;
	@include background-cover;

	.h1 {
		margin-top: 80px;
		margin-bottom: 0;
	}

	.h2 {
		margin-bottom: 35px;
	}

	p {
		margin-bottom: 100px;
	}
}

/*============================================================================
	#Locations
==============================================================================*/

.locations-grid {
	padding: $content-spacing 0;

	.h1 {
		margin-bottom: 100px;
	}
}

.locations-grid__loc {
	margin-bottom: $content-spacing;

	h4 {
		margin-top: 25px;
	}
}